{
  "name": "YouTube Short Conversion",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Redirects YouTube short URLs to normal video format.",
  "icons": {
    "16": "icons/icon16x16.png",
    "48": "icons/icon48x48.png",
    "128": "icons/icon128x128.png"
  },
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-short-conversion@gmail.com"
    }
  }
}
